@typeparam Project

@if (Items == null)
{
    <tr class="text-center">
        @ListNull
    </tr>
}
else
{
    if (Items.Count == 0)
    {
        <tr class="text-center">
            @ListEmpty
        </tr>
    }
    else
    {
        @foreach (var item in Items)
        {
            <tr>
                @ItemTemplate(item)
            </tr>
        }
    }
}

@code {
    [Parameter] public RenderFragment ListNull { get; set; }
    [Parameter] public RenderFragment ListEmpty { get; set; }

    [Parameter] public RenderFragment<Project> ItemTemplate { get; set; }
    [Parameter] public List<Project> Items { get; set; }
}
